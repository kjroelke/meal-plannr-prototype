---
import MealOfTheDayCard from './MealOfTheDayCard.astro';

const days = [
	'Sunday',
	'Monday',
	'Tuesday',
	'Wednesday',
	'Thursday',
	'Friday',
	'Saturday',
] as const;
const today = days[new Date().getDay()];
---

<script>
	import Swiper from 'swiper';
	import 'swiper/css/bundle';
	import { A11y, EffectCards, Mousewheel } from 'swiper/modules';
	new Swiper('#meal-plan-swiper', {
		modules: [A11y, EffectCards, Mousewheel],
		effect: 'cards',
		grabCursor: true,
		mousewheel: {
			enabled: true,
			forceToAxis: true,
		},
		spaceBetween: 10,
		a11y: {
			enabled: true,
			prevSlideMessage: 'Previous meal',
			nextSlideMessage: 'Next meal',
		},
		cardsEffect: {
			slideShadows: false,
			perSlideRotate: 1,
			perSlideOffset: 5,
		},
	});
</script>
<div
	class='swiper my-5 w-100'
	id='meal-plan-swiper'
	style='max-width: calc(100% - 10px);'
>
	<div class='swiper-wrapper align-items-stretch'>
		{days.map((day) => <MealOfTheDayCard day={day} />)}
	</div>
</div>
