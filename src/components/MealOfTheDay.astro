---
import mealPlan from '../data/sampleMealPlan.json';
export interface Props {
	day:
		| 'Sunday'
		| 'Monday'
		| 'Tuesday'
		| 'Wednesday'
		| 'Thursday'
		| 'Friday'
		| 'Saturday';
}
const { day } = Astro.props;
const meals = mealPlan.findIndex((meal) => meal.day === day) || 0;
if (0 !== meals) {
	return;
}
---

<div
	class='tab-pane fade show active'
	id={`tab-pane-${day}`}
	role='tabpanel'
	aria-labelledby={`tab-${day}`}
	tabindex='0'
>
	<table class='table table-striped table-hover'>
		<thead>
			<tr>
				<th scope='col'>Lunch</th>
				<th scope='col'>Dinner</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>
					{
						mealPlan[meals]?.lunch?.kj ===
						mealPlan[meals]?.lunch?.sara ? (
							(mealPlan[meals]?.lunch?.kj ?? 'N/A')
						) : (
							<>
								<strong>kj:</strong>{' '}
								{mealPlan[meals]?.lunch?.kj ?? 'N/A'}
								<br />
								<strong>sara:</strong>{' '}
								{mealPlan[meals]?.lunch?.sara ?? 'N/A'}
							</>
						)
					}
				</td>
				<td>
					{
						mealPlan[meals]?.dinner?.kj ===
						mealPlan[meals]?.dinner?.sara ? (
							(mealPlan[meals]?.dinner?.kj ?? 'N/A')
						) : (
							<>
								<strong>KJ:</strong>{' '}
								{mealPlan[meals]?.dinner?.kj ?? 'N/A'}
								<br />
								<strong>Sara:</strong>{' '}
								{mealPlan[meals]?.dinner?.sara ?? 'N/A'}
							</>
						)
					}
				</td>
			</tr>
		</tbody>
	</table>
</div>
