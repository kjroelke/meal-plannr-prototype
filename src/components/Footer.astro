---
import NavLink from './NavLink.astro';
import NavLinkOffcanvas from './NavLinkOffcanvas.astro';
const navLinks = [
	{
		href: '/',
		text: 'Home',
	},
	{
		href: 'recipes',
		text: 'Recipes',
	},
	{
		href: '#',
		text: '+',
		items: [
			{
				href: '#',
				text: 'Action 1',
			},
			{
				href: '#',
				text: 'Action 2',
			},
		],
	},
	{
		href: 'plans',
		text: 'Plans',
	},
	{
		href: 'settings',
		text: 'Settings',
	},
];
---

<footer class='container-fluid text-bg-primary'>
	<nav class='navbar py-3'>
		<ul
			class='navbar-nav flex-row justify-content-between gap-3 flex-grow-1 align-items-center'
		>
			{
				navLinks.map((link) => (
					<li class='fw-bold'>
						{link.items ? (
							<NavLinkOffcanvas
								href={link.href}
								text={link.text}
								items={link.items}
							/>
						) : (
							<NavLink
								href={link.href}
								class='nav-link'
							>
								{link.text}
							</NavLink>
						)}
					</li>
				))
			}
		</ul>
	</nav>
</footer>
